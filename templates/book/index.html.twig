{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h1>{{pageTitle}}</h1>
            {% for book in books %}
                <div class="row">
                    <div class="col-md-12 text-left">
                        <div class="card flex-md-row mb-4 box-shadow h-md-250">
                            <div class="card-body d-flex flex-column align-items-start">
                                <strong class="d-inline-block mb-2 text-primary">von <a href="{{path("blog", {blogSlug: book.blog.slug})}}">{{book.blog.title}}</a></strong>
                                <h2 class="h5 mb-2">{{book.title}}</h2>
                                <ul class="list-unstyled">
                                    <li>
                                        <b>Seiten:</b> {{book.pages}}
                                    </li>
                                    <li>
                                        <b>ver√∂ffentlicht am:</b> {{book.released|date("d.m.Y")}}
                                    </li>
                                    <li>
                                        <b>ISBN10:</b> {{book.isbn10}}
                                    </li>
                                    <li>
                                        <b>ISBN13:</b> {{book.isbn13}}
                                    </li>
                                </ul>
                                <a class="btn btn-outline-primary" href="http://www.amazon.de/gp/product/{{book.asin}}/ref=as_li_tl?ie=UTF8&camp=1638&creative=6742&creativeASIN={{book.asin}}&linkCode=as2&tag=rezeptede-21">Buch auf Amazon</a>
                            </div>
                            <img src="http://ws-eu.amazon-adsystem.com/widgets/q?_encoding=UTF8&ASIN={{book.asin}}&Format=_SL250_&ID=AsinImage&MarketPlace=DE&ServiceVersion=20070822&WS=1&tag=rezeptede-21">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
