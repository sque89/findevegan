{% extends '/admin/admin.html.twig' %}

{% block main %}
    <div class="container py-3">
        <h1 class="mb-3">Rezepte ohne Bild-Datei pro Blog</h1>
        <div class="row">
            <div class="col-md-12 text-left">
                <ul class="list-group">
                    {% for blog in blogs %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{blog["blogName"]}}
                            <span class="badge badge-primary badge-pill">{{blog["missingImageFileCount"]}}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}