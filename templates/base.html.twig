<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg bg-secondary">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <img src="/images/misc/banner.png" class="d-inline-block align-top" alt="findevegan.de">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Rezeptsuche <span class="sr-only">(aktuell)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Blogs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Bücher</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Über</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Kontakt</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        <div class="container">
            <div class="row">
                <div class="col-12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    <footer class="bg-secondary">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-3">facebook</div>
                <div class="col-12 col-md-3">tag cloud</div>
                <div class="col-12 col-md-3">beste blogs</div>
                <div class="col-12 col-md-3">weblinks</div>
            </div>
        </div>
    </footer>
{% block javascripts %}{% endblock %}
</body>
</html>
